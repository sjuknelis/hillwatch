{
    "manifest_version": 3,
    "name": "Hill Watch",
    "version": "1.0.0",
    "description": "An extension for civic awareness.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "geolocation",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    }
}